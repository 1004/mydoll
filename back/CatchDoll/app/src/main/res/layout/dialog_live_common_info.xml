<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="@dimen/dimen_ban_view_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_coner_back_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_house_title"
            style="@style/style_ban_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ban_view_item_h"
            android:gravity="center"
            android:text="@string/dialog_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ban_line"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp">
            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="提示"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ban_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ban_view_item_h"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_common"
                style="@style/style_h_cancel_"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_ban_cancel"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_divide_"></View>

            <TextView
                android:id="@+id/tv_yes_common"
                style="@style/style_ban_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_ban_yes"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>