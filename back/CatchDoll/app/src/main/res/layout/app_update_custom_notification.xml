<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/bg_white_round_conner_outter_trans"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/app_update_logo"
        android:layout_width="50dp"
        android:layout_marginLeft="5dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/app_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/app_name"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/app_update_progress_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10% (1M/7M)"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/app_update_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="提示信息"
            android:textColor="@color/color_black" />

        <ProgressBar
            android:id="@+id/app_update_progress"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:progress="0"
            android:progressDrawable="@drawable/progress_vertical" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/app_update_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@android:drawable/btn_dialog"
        android:visibility="gone" />

</LinearLayout>