<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerY="0.75"
                android:endColor="@color/color_21a9ff"
                android:startColor="@color/color_21a9ff" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/color_28B8FF"
                    android:startColor="@color/color_28B8FF" />
            </shape>
        </clip>
    </item>

</layer-list>