<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">
        <TextView
            style="@style/style_14_848d92"
            android:text="@string/string_address_info"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/box_address_update"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                style="@style/style_14_00ded6"
                android:text="@string/string_address_info_update"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_r_margin"
        android:layout_marginRight="@dimen/dimen_r_margin"
        android:background="@drawable/shape_round_white_20"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/box_address_receive_tv"
                    style="@style/style_14_848d92"
                    android:text="收件人:来下了"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/box_address_receive_phone"
                    style="@style/style_14_848d92"
                    android:text="手机号:344344"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/box_address_receive_address"
                style="@style/style_14_848d92"
                android:text="地址:三大框架看来电视放假了宽度缩放就"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>