<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/back_common_nav">
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                style="@style/style_14_adb5bb"
                android:text="@string/string_update_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/update_recevier_et"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:paddingLeft="@dimen/dimen_update_info_ed_r"
                android:layout_marginRight="@dimen/dimen_update_info_margin_r"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                android:layout_height="@dimen/dimen_update_info_h"
                android:hint="@string/string_update_receiver_hint"
                android:inputType="textEmailAddress"
                style="@style/style_15_dee2e5"
                android:textColorHint="#cccccc"
                 />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                style="@style/style_14_adb5bb"
                android:text="@string/string_update_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/update_phone_et"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_update_info_ed_r"
                android:background="#ffffff"
                android:layout_marginRight="@dimen/dimen_update_info_margin_r"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                android:layout_height="@dimen/dimen_update_info_h"
                android:hint="@string/string_update_phone_hing"
                android:inputType="phone|number"
                style="@style/style_15_dee2e5"
                android:textColorHint="#cccccc"
                 />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                style="@style/style_14_adb5bb"
                android:text="@string/string_update_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/update_address_et"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:paddingLeft="@dimen/dimen_update_info_ed_r"
                android:layout_marginRight="@dimen/dimen_update_info_margin_r"
                android:layout_marginLeft="@dimen/dimen_update_info_margin"
                android:layout_height="@dimen/dimen_update_info_h"
                android:hint="@string/string_update_addr_hint"
                android:inputType="textEmailAddress"
                style="@style/style_15_dee2e5"
                android:textColorHint="#cccccc"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/recharge_save_tv"
            android:background="@drawable/shape_round_2bd2b7_40_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/string_update_save"
            android:gravity="center"
            style="@style/style_14_fff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp" />
    </RelativeLayout>
</LinearLayout>