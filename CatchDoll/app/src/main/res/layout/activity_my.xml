<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/back_common_nav"></include>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:background="@color/color_EDF0F4"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_my_header_h">
        <ImageView
            android:src="@mipmap/my_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="25dp"
                style="@style/style_14_fff"
                android:text="@string/string_my_has_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_money_tv"
                style="@style/style_40_fff"
                android:text="150"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_rechange_tv"
                android:text="@string/string_my_rechage"
                style="@style/style_11_fff"
                android:height="35dp"
                android:width="75dp"
                android:gravity="center"
                android:background="@drawable/shape_round_green_bg"
                android:layout_marginTop="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/my_rechange_history"
                android:layout_marginTop="@dimen/dimen_my_item_top"
                android:background="@drawable/shape_room_bg"
                android:layout_marginLeft="@dimen/dimen_my_item_right"
                android:layout_marginRight="@dimen/dimen_my_item_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_my_item_h">
                <TextView
                    style="@style/style_14_848d92"
                    android:text="@string/string_my_rechange_history"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_my_item_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/my_next"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_my_item_right"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shape_room_bg"
                android:layout_marginTop="@dimen/dimen_my_item_top"
                android:layout_marginLeft="@dimen/dimen_my_item_right"
                android:layout_marginRight="@dimen/dimen_my_item_right"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/my_invite_give"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_my_item_h">
                    <TextView
                        style="@style/style_14_848d92"
                        android:text="@string/string_my_invite_give"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_my_item_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@mipmap/my_next"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_my_item_right"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/my_invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_my_item_h">
                    <TextView
                        style="@style/style_14_848d92"
                        android:text="@string/string_my_input_code"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_my_item_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@mipmap/my_next"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_my_item_right"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/shape_room_bg"
                android:layout_marginTop="@dimen/dimen_my_item_top"
                android:layout_marginLeft="@dimen/dimen_my_item_right"
                android:layout_marginRight="@dimen/dimen_my_item_right"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_my_item_h">
                    <TextView
                        style="@style/style_14_848d92"
                        android:text="@string/string_my_bg_music"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_my_item_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/my_bg_music_iv"
                        android:src="@mipmap/my_close"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_my_item_right"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/dimen_my_item_h">
                    <TextView
                        style="@style/style_14_848d92"
                        android:text="@string/string_my_voice"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_my_item_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/my_voice"
                        android:src="@mipmap/my_open"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_my_item_right"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/shape_room_bg"
                android:layout_marginTop="@dimen/dimen_my_item_top"
                android:layout_marginLeft="@dimen/dimen_my_item_right"
                android:layout_marginRight="@dimen/dimen_my_item_right"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_my_item_h">
                    <TextView
                        style="@style/style_14_848d92"
                        android:text="@string/string_code_hard"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_my_item_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/my_bg_soft_iv"
                        android:src="@mipmap/my_close"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_my_item_right"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/my_exit"
                android:layout_marginTop="@dimen/dimen_my_item_exit_top"
                android:background="@drawable/shape_room_bg"
                android:layout_marginLeft="@dimen/dimen_my_item_right"
                android:layout_marginRight="@dimen/dimen_my_item_right"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimen_my_item_right"
                android:layout_height="@dimen/dimen_my_item_h">
                <TextView
                    style="@style/style_14_ff0000"
                    android:text="@string/string_my_exit"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_my_item_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>